                    .row.w100.mt-auto.ex1
                        .w40: .row.wrap
                            drag(v-for="(i, index) in 5" data="d" dropzone=".drop3" stay-if-ok append-to-dropzone).w20: img(src="i/10.png").w100.u
                            drag(v-for="(i, index) in 2" data="u" dropzone=".drop3" stay-if-ok append-to-dropzone).w10: img(src="i/1.png").w100.d
                        .w20.box
                            number(c=1 smaller) Decenas
                            .drop(data="d" droptimes="multiple" droplimit="10").drop3
                            inputable(initclass="c1" :isok="5"): number(c=1 small) 5
                        .w20.box
                            number(c=2 smaller) Unidades
                            .drop(data="u" droptimes="multiple" droplimit="10").drop3
                            inputable(initclass="c2" :isok="2"): number(c=2 small) 2
                        .w20.box
                            number(c=3 smaller) Total
                            inputable(initclass="c3" :isok="52"): number(c=3 small) 52


            // END
            scene(v-if="currentScene==3" :key="3" end-scene :final-data="finalData")
        
        +scripts
            script.

                app.$devmode = false
                app.$set(app.temps, 'a', [])
                
                app.currentScene = 0
                app.scenesCount = 2