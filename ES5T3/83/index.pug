            }
            .triptico3 .drop[data="1c"] {
                height: 50%;
                left: 34%;
                top: 10%;
            }
            .triptico3 .drop[data="1d"] {
                height: 24%;
                left: 34%;
                top: 66%;
            }
            .triptico3 .drop[data="1e"] {
                height: 30%;
