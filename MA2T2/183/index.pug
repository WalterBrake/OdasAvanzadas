- title = 'Identificamos la medida de un litro'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .drop {
                width: 100%;
                min-height: 140px;
                border: 4px dashed var(--sec);
                border-radius: 20px;
                background: rgba(255, 255, 255, 0.4);
                margin: 10px;
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .drag {
                width: 30%;
                min-width: 140px;
                height: auto;
            }
            .drag div {
                width: 100%;
                display: flex;
                background: var(--main);
                box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.2);
                margin: 8px;
                border-radius: 10px;
                padding: 10px;
                justify-content: center;
            }
            .drag div img {
                flex-shrink: 0;
                max-width: 40px !important;
                min-width: 20px;
            }

            .drop .oper{
                border: 2px dashed var(--main);
            }


            .last .clickable {
                background: #fff;
                padding: 10px;
                margin: 10px;
                border-radius: 10px;
                box-shadow: 6px 6px 0 var(--main);
            }
            .last .clickable > div {
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .last .clickable img {
                max-width: 30px;
                margin: 0 4px;
            }

            .drop {
                flex-direction: column;
            }
            .drop .oper {
                border: 2px dashed var(--main);
                display: flex;
                border-radius: 10px;
                background: #fff;
                padding: 10px;
                height: auto;
                align-items: center;
            }
            .drop .oper img, .drop img {
                max-width: 20px;
                min-width: 20px;
            }
            @media (max-width: 680px) {
                .drop .oper {
                    flex-direction: column;
                }
            }
            .drag .oper {
                align-items: center;
                width: 100%;
            }
            .drag .oper .number,
            .drag .oper div {
                font-size: 3rem;
                box-shadow: none;
                background: none;
            }
            @media (max-width: 680px) {
                .drag .oper img {
                    max-width: 10px;
                    min-width: 10px;
                }
            }
            @media (max-width: 680px) {
                .drag {
                    width: 90% !important;
                }
            }




    body
        #app
            // START
            scene(v-if="currentScene==0" :key="0" start-scene @completed="sceneCompleted")

            // SCENES
            scene(v-if="currentScene==1" hidescorebox :key="1" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="1" scene-color="#ED1C25")
                //info(type="seleccionar" title=title text="En la granja del abuelo Roque, sus nietos están apunto de aprender a medir los líquidos usando el litro." textaudio="s/instruccion1.mp3" :autoplay="true" )
