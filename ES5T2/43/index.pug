include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Leo leyendas'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
           

    body
        #app
            // START
            scene(v-if="currentScene==0" :key="0" start-scene @completed="sceneCompleted")

            // SCENES
            scene(v-if="currentScene==1" ref="firstscene" :key="1" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="14" scene-color="#ED1C25")
                info(type="seleccionar" title=title text="Coloca los platillos en cada canasta seg√∫n su origen." textaudio="s/instruccion1.mp3" :autoplay="true" @completedinstructions="")
                activity
                    
                    
            // END
            scene(v-if="currentScene==2" :key="2" end-scene :final-data="finalData")
        
        +scripts
            script.
                
                app.$devmode = false
                app.$set(app.temps, 'a', false)
                app.$set(app.temps, 'b', false)
                app.$set(app.temps, 'c', false)
                
                app.currentScene = 0
                app.scenesCount = 1