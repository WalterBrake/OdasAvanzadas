include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Sé dónde están los puntos'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .bg{
                background-image: url(i/bg.png);
                background-size: contain;
                background-position: center;
                background-repeat: no-repeat;
                height: 100%;
            }
            @media (max-width: 820px) {
                .boxa {
                    display: flex;
                    flex-wrap: wrap;
                    justify-content: center;
                }
                .boxa-wr {
                    max-width: 140px;
                }
                .bg {
                    background-size: cover;
                }
                lottie-player {
                    max-width: 430px;
                    margin: 0 auto;
                }
            }
            .inputable {
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 0;
                margin: 6px;
            }
            .inputable input {
                font-size: 1.2rem;
                margin: 0 10px;
            }
            .inputable .bimg {
                width: 50px;
                height: auto;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                margin: 0 10px;
            }
            .inputable .bimg img {
                width: 90%;
            }


    body
        #app
            // START
            scene(v-if="currentScene==0" :key="0" start-scene @completed="sceneCompleted")

            // SCENES
            scene(v-if="currentScene==1" :key="1" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="setEv" :devmode="$devmode" :answers="8" scene-color="#ED1C25")
                info(type="input" title=title text="Escribe las coordenadas en las que se encuentra cada imagen, para descubrir la figura que se forma. Sigue el orden en el que se encuentran en el recuadro." textaudio="s/instruccion1.mp3" :autoplay="true")
                activity
                    .row.w100.bg.wrap
                        .w60.wm100
                            lottie-player(v-if="temps.dis==0" src="i/v0.json" key="l0" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay)
                            lottie-player(v-else-if="temps.dis==1"  src="i/v1.json" key="l1" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay)
                            lottie-player(v-else-if="temps.dis==2" src="i/v2.json" key="l2" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay)
                            lottie-player(v-else-if="temps.dis==3" src="i/v3.json" key="l3" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay)
                            lottie-player(v-else-if="temps.dis==4" src="i/v4.json" key="l4" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay)
                            lottie-player(v-else-if="temps.dis==5" src="i/v5.json" key="l5" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay)
                            lottie-player(v-else-if="temps.dis==6" src="i/v6.json" key="l6" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay)
                            lottie-player(v-else-if="temps.dis==7" src="i/v7.json" key="l7" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay)
                            lottie-player(v-else-if="temps.dis==8" src="i/v8.json" key="l8" background="transparent" speed="1" style="width: 100%; height: 100%;" loop autoplay)
                        .w30.wm100.box-c
                            .boxa
                                div(v-for="(i, index) in ['3,9','1,6', '1,2', '5,2', '9,2', '9,6', '9,9', '5,6' ]").boxa-wr
                                    inputable(initclass="c2" :isok="i" placeholder="#,#" :disabled="temps.dis<(index)"  @isok="temps.dis+=1")
                                        template(v-slot:before="")
                                            div.bimg: img(:src="'i/l'+(index+1)+'.png'")
                                            number(c=8 small) (
                                        number(c=8 smaller) {{i}}
                                        template(v-slot:after="")
                                            number(c=8 small) )
                                div.boxa-wr(v-if="temps.dis == 8").text-center
                                    button(@click="sceneCompleted(temps.ev)").button.big.animate__animated.animate__flip Finalizar

                            



            
            
            // END
            scene(v-if="currentScene==2" :key="2" end-scene :final-data="finalData")
        
        +scripts
            script.

                app.$devmode = false
                app.$set(app.temps, 'dis', 0)

                app.setEv = function ($ev){
                    app.$set(app.temps, 'ev', $ev)
                }
                
                app.currentScene = 0
                app.scenesCount = 1