include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Describo figuras'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .drags {
                display: flex;
                flex-wrap: wrap;
            }
            .drags .drag {
                width: auto;
                height: auto;
                max-width: 60px;
                max-height: 60px;
                margin: 6px;
            }
            .drags .drag img {
                widows: auto;
                height: auto;
                max-height: 100%;
                max-width: 100%;
                min-width: auto;
                min-height: auto;
                object-fit: contain;
            }
            .robot {
                position: relative;
            }
            .drops .drop {
                position: absolute;
                width: 20%;
                height: 10%;
            }
            .drops .drop:nth-child(1) {
                left: 34%;
                top: 51%;
                width: 16%;
                height: 11%;
            }
            .drops .drop:nth-child(2) {
                left: 31%;
                top: 35.5%;
                width: 37.5%;
                height: 13%;
            }
            .drops .drop:nth-child(3) {
                left: 31%;
                top: 49%;
                width: 37.5%;
                height: 13%;
            }
            .drops .drop:nth-child(4) {
                left: 70.7%;
                top: 46.2%;
                width: 6%;
                height: 4%;
            }
            .drops .drop:nth-child(5) {
                left: 50%;
                top: 21.8%;
                width: 19%;
                height: 13%;
            }
            .drops .drop:nth-child(6) {
                left: 22%;
                top: 21.8%;
                width: 9.3%;
                height: 6.5%;
            }
            .drops .drop:nth-child(7) {
                left: 23.3%;
                top: 28.5%;
                width: 6.2%;
                height: 17.5%;
            }
            .drops .drop:nth-child(8) {
                left: 49.5%;
                top: 62.3%;
                width: 16%;
                height: 25.5%;
            }
            .drops .drop:nth-child(9) {
                left: 51%;
                top: 10.5%;
                width: 6%;
                height: 3%;
            }
            .drops .drop:nth-child(10) {
                left: 27%;
                top: 88%;
                width: 23%;
                height: 6%;
            }
            .drops .drop:nth-child(11) {
                left: 37%;
                top: 4%;
                width: 25.5%;
                height: 4.3%;
            }

            .minglob{
                position: absolute;
                left: 0; top: 0;
                width: 10%;
            }
            #ojol, #ojod{
                animation-name: ojos;
                animation-duration: 2s;
                animation-iteration-count: infinite;
            }

            @keyframes ojos {
                0%{
                    opacity: 0%;
                }
                45%{
                    opacity: 100%;
                }
                50%{
                    opacity: 0%;
                }
                55%{
                    opacity: 100%;
                }
                60%{
                    opacity: 0%;
                }
                65%{
                    opacity: 100%;
                }
                90%{
                    opacity: 100%;
                }
                100%{
                    opacity: 0%;
                }
            }

    body
        #app
            // START
            scene(v-if="currentScene==0" :key="0" start-scene @completed="sceneCompleted")

            // SCENES
            scene(v-if="currentScene==1" :key="1" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="11" scene-color="#ED1C25")
                info(type="dragdrop" title=title text="Coloca en el robot las figuras que tienen tres lados en los espacios que corresponda." textaudio="s/instruccion1.mp3" :autoplay="true")
                    audiotext(v-if="temps.count==4" :autoplay="true" audio="s/instruccion2.mp3" text="Coloca en el robot las figuras que tienen cuatro lados en los espacios que corresponda.")
                activity
                    .row.w100
                        .w50.robot
                            img(src="i/robot.png").w100
                            .drops
                                .drop.drop1(:data="index" droptimes="untilok" v-for="(i, index) in 4")
                                .drop.drop2(:data="index+4" droptimes="untilok" v-for="(i, index) in 7" v-if="temps.count>=4")
                        .w50.drags
                            template(v-for="(i, index) in temps.a")
                                drag(dropzone=".drop" :data="i.d" stay-if-ok append-to-dropzone @isok="temps.count++" no-error-sound): img(:src="i.im").w100
            
            // SCENES
            scene(v-if="currentScene==2" hidescorebox :key="2" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="11" scene-color="#ED1C25")
                info(type="dragdrop" title=title text="Coloca en el robot las figuras que tienen tres lados en los espacios que corresponda." textaudio="s/instruccion1.mp3" :autoplay="false")
                activity
                    .row.w100
                        .w50.robot
                            .minglob: dialogaudio(audio="s/robot.mp3" :autoplay="true" always-visible)
                            embedsvg(src="i/robotfinal.svg")
                        .w20: button(@click="sceneCompleted(false)").button.big.animate__animated.animate__flip Finalizar
            
            // END
            scene(v-if="currentScene==3" :key="3" end-scene :final-data="finalData")
        
        +scripts
            script.

                app.$devmode = false
                app.$set(app.temps, 'count', 0)
                app.$set(app.temps, 'a', [
                    {im: 'i/t1.png', d:0},
                    {im: 'i/t2.png', d:1},
                    {im: 'i/t3.png', d:2},
                    {im: 'i/t4.png', d:3},
                    {im: 'i/r1.png', d:4},
                    {im: 'i/r2.png', d:5},
                    {im: 'i/r3.png', d:6},
                    {im: 'i/r4.png', d:7},
                    {im: 'i/r5.png', d:8},
                    {im: 'i/r6.png', d:9},
                    {im: 'i/r7.png', d:10},
                    {im: 'i/i1.png', d:0},
                    {im: 'i/i2.png', d:0},
                    {im: 'i/i3.png', d:0},
                ])
                
                app.currentScene = 0
                app.scenesCount = 1