            }
            .triptico2 .drop.isok {
                background: transparent;
                box-shadow: none;

                line-height: 1;
                padding: 1px;
            }
            @media (max-width: 680px) {
                .triptico2 .drop.isok {
                    font-size: 0.6rem;
                }
            }
            .triptico2 .drop[data="1a"] {
                height: 60%;
                top: 27%;
            }
            .triptico2 .drop[data="1b"] {
                height: 44%;
                left: 34%;
                top: 10%;
            }
            .triptico2 .drop[data="1c"] {
                height: 30%;
                top: 10%;
                border-radius: 50%;
                left: 67%;
            }
            .triptico2 .drop[data="1d"] {
                height: 43%;
                left: 67%;
                top: 44%;
            }


            .drag3 .drag {
                width: auto;
                height: auto;
                max-width: 110px;
            }
            .drag3 .drag.txt {

            }
            .drag3 .drag.txt div {
                padding: 4px;
                border-radius: 4px;
                line-height: 1;
            }
            .triptico3 .drop {
                position: absolute;
                width: 29%;
                box-sizing: border-box;
                min-height: 20px;
                left: 0;
                margin: 2%;
                text-align: left;
            }
            .triptico3 .drop.isok {
                background: transparent;
                box-shadow: none;
                font-size: 0.8rem;
