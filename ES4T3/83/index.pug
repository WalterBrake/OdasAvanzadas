            script.

                app.$devmode = false
                app.$set(app.temps, 'a', [
                    {v: 0, t: '¿A qué se dedicaban sus padres?'},
                    {v: 1, t: '¿En qué fecha y en qué lugar nació Charles?'},
                    {v: 0, t: '¿Cuándo aprendió lenguas muertas?'},
