                        drag(data="no" dropzone=".drop" append-to-dropzone)
                            div: img(v-for="(i, index) in 1" src="i/1l.png")
                        drag(data="ok" dropzone=".drop" append-to-dropzone)
                            div: img(v-for="(i, index) in 5" src="i/1l.png")




