                            .drop(data="d" droptimes="multiple" droplimit="10").drop3
                            inputable(initclass="c1" :isok="6"): number(c=1 small) 6
                        .w20.box
                            number(c=2 smaller) Unidades
                            .drop(data="u" droptimes="multiple" droplimit="10").drop3
                            inputable(initclass="c2" :isok="5"): number(c=2 small) 5
                        .w20.box
                            number(c=3 smaller) Total
                            inputable(initclass="c3" :isok="65"): number(c=3 small) 65
            
            
            
            // SCENES
            scene(v-if="currentScene==2" :key="2" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="31" scene-color="#ED1C25")
                info(type="dragdrop" title=title text="Separa las monedas en decenas y unidades colocándolas en los espacios correspondientes. Después, escribe cuántas unidades y decenas hay en cada monto y cuál es la suma total." textaudio="s/instruccion1.mp3" :autoplay="false")
                activity
                    .row.w100.ex1
                        .w40: .row.wrap
                            drag(v-for="(i, index) in 2" data="d" dropzone=".drop1" stay-if-ok append-to-dropzone).w20: img(src="i/10.png").w100.u
                            drag(v-for="(i, index) in 5" data="u" dropzone=".drop1" stay-if-ok append-to-dropzone).w10: img(src="i/1.png").w100.d
                        .w20.box
                            number(c=1 smaller) Decenas
                            .drop(data="d" droptimes="multiple" droplimit="10").drop1
                            inputable(initclass="c1" :isok="2"): number(c=1 small) 2
                        .w20.box
