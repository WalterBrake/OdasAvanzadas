include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Elaboro un tríptico'

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .drag1 .drag {
                width: auto;
                height: auto;
                max-width: 100px;
            }
            .drag1 .drag.txt {
                font-size: 0.7rem;
            }
            .drag1 .drag.txt div {
                padding: 2px;
                border-radius: 4px;
                line-height: 1;
            }
            .triptico1 .drop {
                position: absolute;
                width: 88%;
                box-sizing: border-box;
                min-height: 20px;
                left: 0;
            }
            .triptico1 .drop.isok {
                background: transparent;
                box-shadow: none;
                font-size: 0.7rem;
                line-height: 1;
            }
            @media (max-width: 680px) {
                .drag.txt{
                    font-size: 0.5rem;
                }
                .triptico1 .drop.isok {
                    font-size: 0.6rem;
                }
                .drop.isok div{
                    font-size: 0.5rem;
                }
            }
            .triptico1 .drop[data="1a"] {
                height: 8%;
                top: 7%;
            }
            .triptico1 .drop[data="1b"] {
                height: 14%;
                top: 17%;
            }
            .triptico1 .drop[data="1c"] {
                height: 30%;
                top: 38%;
                border-radius: 50%;
            }
            .triptico1 .drop[data="1d"] {
                height: 20%;
                top: 74%;
            }

            .drag2 .drag img{
                max-width: 90px;                
            }
            .drag2 .drag {
                width: auto;
                height: auto;
                max-width: 110px;
            }
            .drag2 .drag.txt {
                font-size: 0.7rem;
            }
            .drag2 .drag.txt div {
                padding: 2px;
                border-radius: 4px;
                line-height: 1;
            }

            .drag.txt {
                margin: 2px;
                padding: 0;
            }
            .drag.txt div {
                font-size: 0.6rem;
            }

            .triptico2 .drop {
                position: absolute;
                width: 29%;
                box-sizing: border-box;
                min-height: 20px;
                left: 0;
                margin: 2%;
