include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = ''

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .drag {
                margin: 2px;
                height: auto;
            }
            .drag.w20 {
                width: 16%;
                min-width: 30px;
            }
            .drag.w10 {
                width: 12%;
                min-width: 24px;
            }
            .drag img {
                min-width: auto;
            }
            .ex1 {
                background: rgba(100, 205, 255, 0.1);
                border-radius: 10px;
                padding: 10px;
                max-width: 96%;
            }
            .box {
                background: #f5f5f5;
                border-radius: 10px;
                height: 100%;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            .box .number {
                text-align: center;
                padding: 10px 1px;
                font-size: 1rem;
            }
            @media (max-width: 680px) {
                .box .number {
                    font-size: 0.6rem;
                }
            }
            .box .drop {
                min-height: 60px;
                background: var(--beige);
                margin: 4px;
                border-radius: 6px;
                border: 2px dashed rgba(0, 0, 0, 0.1);
                margin-bottom: 10px;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-wrap: wrap;
            }
            .box .drop .u {
                max-width: 26%;
            }
            .box .drop .d {
                max-width: 20%;
            }
            .box .drop.hover {
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1) inset;
            }
            .box .inputable {
                margin: 5px 15px;
                padding: 2px;
            }
            .box .inputable .number{
                padding: 4px;
            }
            .box .inputable input {
                font-size: 1rem;
            }
            .box .inputable .number{
                padding: 2px 4px;
                font-size: 1.4rem;
            }
            @media (max-width: 680px) {
                .box .inputable {
                    margin: 2px 8px;
                    padding: 1px;
                }
            }
            .box:last-child {
                justify-content: center;
                background: #00A8CB;
            }
            .box:last-child .number {
                font-size: 1.4rem;
            }
            @media (max-width: 680px) {
                .box:last-child .number {
                    font-size: 1rem;
                }
            }



    body
        #app
            // START
            scene(v-if="currentScene==0" :key="0" start-scene @completed="sceneCompleted")

            // SCENES
            scene(v-if="currentScene==1" :key="1" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="32" scene-color="#ED1C25")
                info(type="dragdrop" title=title text="Separa las monedas en decenas y unidades colocándolas en los espacios correspondientes. Después, escribe cuántas unidades y decenas hay en cada monto y cuál es la suma total." textaudio="s/instruccion1.mp3" :autoplay="true")
                activity
                    .row.w100.ex1
                        .w40: .row.wrap
                            drag(v-for="(i, index) in 3" data="d" dropzone=".drop1" stay-if-ok append-to-dropzone).w20: img(src="i/10.png").w100.u
                            drag(v-for="(i, index) in 3" data="u" dropzone=".drop1" stay-if-ok append-to-dropzone).w10: img(src="i/1.png").w100.d
                        .w20.box
                            number(c=1 smaller) Decenas
                            .drop(data="d" droptimes="multiple" droplimit="10").drop1
                            inputable(initclass="c1" :isok="3"): number(c=1 small) 3
                        .w20.box
                            number(c=2 smaller) Unidades
                            .drop(data="u" droptimes="multiple" droplimit="10").drop1
                            inputable(initclass="c2" :isok="3"): number(c=2 small) 3
                        .w20.box
                            number(c=3 smaller) Total
                            inputable(initclass="c3" :isok="33"): number(c=3 small) 33
                    .row.w100.mt-auto.ex1
                        .w40: .row.wrap
                            drag(v-for="(i, index) in 4" data="d" dropzone=".drop2" stay-if-ok append-to-dropzone).w20: img(src="i/10.png").w100.u
                            drag(v-for="(i, index) in 2" data="u" dropzone=".drop2" stay-if-ok append-to-dropzone).w10: img(src="i/1.png").w100.d
                        .w20.box
                            number(c=1 smaller) Decenas
                            .drop(data="d" droptimes="multiple" droplimit="10").drop2
                            inputable(initclass="c1" :isok="4"): number(c=1 small) 4
                        .w20.box
                            number(c=2 smaller) Unidades
                            .drop(data="u" droptimes="multiple" droplimit="10").drop2
                            inputable(initclass="c2" :isok="2"): number(c=2 small) 2
                        .w20.box
                            number(c=3 smaller) Total
                            inputable(initclass="c3" :isok="42"): number(c=3 small) 42
                    .row.w100.mt-auto.ex1
