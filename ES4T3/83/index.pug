- title = ''

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .texto {
                background: #F0DDAA;
                border: 2px solid #AF8B61;
                padding: 6px;
                font-size: 0.9rem;
                color: #402f1e;
                border-radius: 6px;
                box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.1);
            }
            .drag{
                text-align:center;
            }
            .texto .hidden {
                opacity: 0.4;
                font-size: 0.6rem;
            }
            @media (max-width: 680px) {
                .texto .hidden {
                    font-size: 0.5rem;
                }
                .texto .hidden .h4 {
                    font-size: 0.8rem;
                }
            }
            .texto p {
                margin: 10px;
            }
            @media (max-width: 680px) {
                .texto p {
                    font-size: 0.7rem;
                    margin: 4px;
                }
            }
            @media (max-width: 680px) {
                .texto {
                    padding: 4px;
                }
            }
            @media (max-width: 680px) {
                .drag.txt {
                    font-size: 0.7rem;
                }
            }



    body
        #app
            // START
            scene(v-if="currentScene==0" :key="0" start-scene @completed="sceneCompleted")

            // SCENES
            scene(v-if="currentScene==1" hidescorebox :key="1" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="1" scene-color="#ED1C25")
                info(type="dragdrop" title=title text="Esta es la fotografía de uno de los escritores de cuentos infantiles clásicos. Veamos su biografía por partes y averiguemos qué información podemos obtener. Haz clic en el botón de Siguiente para avanzar." textaudio="s/intro.mp3" :autoplay="true")
                activity
                    .row.w100
                        .w40.ws60: img(src="i/pic.png").w100.animate__animated.animate__tada
                    .text-center.mt-1: button(@click="sceneCompleted(false)").button.big.animate__animated.animate__flip Siguiente
            
            // SCENES
            scene(v-if="currentScene==2" :key="2" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="2" scene-color="#ED1C25")
                info(type="dragdrop" title=title text="¿Qué preguntas puedes responder con la información de cada parte de la biografía? Colócalas en el recuadro." textaudio="s/instruccion1.mp3" :autoplay="true")
                activity
                    .row.w100
                        .texto
                            .text-center
                                .h4 Charles Perrault
                                small (1628-1703)
                            .row
                                .w10: img(src="i/pic.png").w100
                                .w90: p Charles Perrault fue un abogado y escritor francés que nació en París el 12 de enero de 1628, en una familia burguesa, lo que le permitió tener una infancia cómoda y estudiar en buenas escuelas.

                    .row.w100
                        .w50
                            .drop(:data="1" droptimes="untilok").dr2
                        .w50
                            template(v-for="(i, index) in temps.a")
                                drag(:data="i.v" initclass="txt" dropzone=".drop" stay-if-ok append-to-dropzone): div {{i.t}}
            
            
            // SCENES
            scene(v-if="currentScene==3" :key="3" :score="scoreInScene" :temporals="temporals" alloks alloks-sound="../../assets/asound/bienhecho_mujer.mp3" @completed="sceneCompleted" :devmode="$devmode" :answers="3" scene-color="#ED1C25")
