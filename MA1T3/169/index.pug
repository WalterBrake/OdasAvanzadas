                    .row.w100.mt-auto.ex1
                        .w40: .row.wrap
                            drag(v-for="(i, index) in 1" data="d" dropzone=".drop2" stay-if-ok append-to-dropzone).w20: img(src="i/10.png").w100.u
                            drag(v-for="(i, index) in 7" data="u" dropzone=".drop2" stay-if-ok append-to-dropzone).w10: img(src="i/1.png").w100.d
